pipeline {
    agent {
        label 'Docker-build-agent-1'
    }

    stages {
        stage("echo Hello") {
            steps {
                sh 'echo "hello from sachin"'
            }
        }
        stage("maven version") {
            steps {
                sh 'mvn --version'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
    }
}
